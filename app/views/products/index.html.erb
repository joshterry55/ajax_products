    <form id='add-product-form' method="POST" action='api/v1/products'>
      <label class="black-text">Product Name</label>
      <input id='product-name' type='text' name='product[name]' required />
      <br>
      <label class="black-text">Base Price</label>
      <input id='product-price' type='text' name='product[base_price]' required />
      <br>
      <label class="black-text">Description</label>
      <input id='product-description' type='text' name='product[description]' />
      <br>
      <label class="black-text">Quantity</label>
      <input id='product-quantity' type='text' name='product[quantity_on_hand]' />
      <br>
      <label class="black-text">Color</label>
      <input id='product-color' type='text' name='product[color]' />
      <br>
      <label class="black-text">Weight</label>
      <input id='product-weight' type='text' name='product[weight]' />
      <br>
      <div class="center">
      <input type='submit' class='btn indigo' />
      </div>
    </form>
    <div>
      <br><button class='btn indigo' id='view-products'>View Products</button><button class='btn indigo right' id='view-purchases'>View Purchases</button><br><br>

      <div id='purchases-table'>
        <h3 class='center'>Purchases</h3>
        <table id="tablestyling" class='striped'>
         <thead>
           <tr class='row'>
               <th class='col s3'>Product</th>
               <th class='col s3'>Quantity</th>
               <th class='col s3'>Item Price</th>
               <th class='col s3'>Total</th>
           </tr>
         </thead>

         <tbody id="purchases">
           <!-- <tr class='row'>
               <td class='col s3'>Alvin</td>
