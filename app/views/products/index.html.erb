      <div id='products-table'>
        <div class="center">
          <button class='btn indigo' id='get-products'>Products In Stock</button>
          <button class='btn red lighten-2' id='get-null-products'>Out of Stock</button><br><br>
        </div>
        <table id="tablestyling" class='striped'>
         <thead>
           <tr class='row'>
               <th class='col s3'>Product</th>
